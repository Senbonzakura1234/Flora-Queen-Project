@model Flora_Queen_Project.Models.Color

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
    <div class="row">
        <div class="col-md-8 mx-auto grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Color</h4>
                    <p class="card-description">Create Color</p>
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger text-small" })
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name)
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control mb-2", placeholder = "Color Name" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger text-small" })
                        </div>
                        <input type="submit" class="btn btn-gradient-primary mr-2" value="Create" />
                        <a class="btn btn-light" href="@Url.Action("Index")">
                            Cancel
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>